<div class="col-sm-9">
<h2>HKEx Listed Companies</h2>
	
	<table class="table table-striped well">
		<thead>
			<tr>
				<th>Company Name</th>
				<th>Ticker</th>
			</tr>
		</thead>
	<% Company.order(:hk_ticker).each do |coy| %>
		<tbody>
			<tr>
				<% if !coy.pretty_name.blank? %>
				<td><%= link_to coy.pretty_name, show_ticker_path(coy.hk_ticker) %> (<%= coy.announcements.count %>)</td>
				<% else %>
				<td><%= link_to coy.name, show_ticker_path(coy.hk_ticker) %> (<%= coy.announcements.count %>)</td>
				<% end %>
				<td><%= coy.ticker %></td>
			</tr>
		</tbody>
	<% end %>
	</table>
</div>
<%= render 'layouts/sidebar' %>
