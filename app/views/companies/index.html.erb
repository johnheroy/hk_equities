<% provide(:title, 'Company List') %>

<div class="col-sm-9">
<h2>Hong Kong-listed Company List</h2>
	
	<input type="text" class="form-control" id="company-search" placeholder="Type to search by name or ticker">
	<table class="table well tablesorter" id="company-index">
		<tbody>
		<% Company.order(:hk_ticker).each do |coy| %>
			<tr>
				<% if !coy.pretty_name.blank? %>
				<td class="company-index-name"><%= link_to coy.pretty_name, show_ticker_path(coy.hk_ticker) %></td>
				<% else %>
				<td class="company-index-name"><%= link_to coy.name, show_ticker_path(coy.hk_ticker) %></td>
				<% end %>
				<td class="company-index-ticker"><%= coy.ticker %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>
<%= render 'layouts/sidebar' %>
